{
  "scripts": {
    "dev:sim": "vite & echo 'Popup: http://localhost:5173/src/popup/popup-dev.html'",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "ext:watch": "wait-on dist/manifest.json && web-ext run --devtools --source-dir ./dist --firefox-profile ./dev-profile --profile-create-if-missing",
    "server:build": "rimraf dist-server && tsc -p server/tsconfig.json && shx cp -r server/wwwroot dist/",
    "server:watch": "ts-node-dev --respawn --transpile-only --project server/tsconfig.json server/server.ts",
    "vite:watch": "vite & echo 'Popup: http://localhost:5712/src/popup/popup.html'",
    "dev": "concurrently -k -n SERVER,REACT,EXT -c blue,green,magenta \"npm run server:watch\" \"npm run build:watch\" \"npm run ext:watch\"",
    "build:extension": "web-ext build"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.1",
    "postcss": "^8.5.6",
    "shx": "^0.4.0",
    "tailwindcss": "^3.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "vite-plugin-static-copy": "^3.1.1",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@types/firefox-webext-browser": "^120.0.4",
    "@vitejs/plugin-react": "^4.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "express": "^5.1.0",
    "googleapis": "^156.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vite": "^6.3.5"
  }
}
