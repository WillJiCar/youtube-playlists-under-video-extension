{
  "compilerOptions": {
    "module": "nodenext", // Node.js requires CommonJS
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "outDir": "../dist-server",
    "rootDir": "./",
    "types": ["esnext"],
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "skipLibCheck": true
  },
  "include": ["./**/*"]
}